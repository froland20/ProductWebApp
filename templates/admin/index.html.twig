{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white p-6 rounded-lg shadow-md text-center max-w-lg w-full">
            <h1 class="text-3xl font-bold mb-6">
                Hello, {{ app.user.firstName ~ ' ' ~ app.user.lastName }}
            </h1>

            {% if app.user.profilePicture is not null %}
                <div class="mb-4">
                    <img src="{{ asset('uploads/images/' ~ app.user.profilePicture) }}" alt="Profile Picture" class="rounded-full w-32 h-32 object-cover mx-auto">
                </div>
            {% endif %}

            <p class="text-gray-800 mb-4">
                E-mail:
                <a href="mailto:{{ app.user.email }}" class="text-blue-600 hover:underline">
                    {{ app.user.email }}
                </a>
            </p>
            <p class="text-gray-700 mb-6">Welcome to the admin panel.</p>
            <a href="{{ path('app_logout') }}" class="text-indigo-600 hover:underline text-lg">Logout</a>
        </div>
    </div>
{% endblock %}
