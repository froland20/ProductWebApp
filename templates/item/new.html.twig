{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-lg mx-auto mt-8">
        <h1 class="text-2xl font-semibold mb-4">Add New Item</h1>
        {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.short_description) }}
            {{ form_widget(form.short_description, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.currency) }}
            {{ form_widget(form.currency, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, { 'attr': { 'class': 'w-full p-2 border border-gray-300 rounded' } }) }}
        </div>
        <div class="mb-4">
            {{ form_label(form.isActive) }}
            {{ form_widget(form.isActive, { 'attr': { 'class': 'p-2' } }) }}
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
            Save Item
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
