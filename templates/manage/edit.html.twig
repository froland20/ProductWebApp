{% extends 'base.html.twig' %}

{% block title %}Edit profile{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Edit profile</h1>

            {% for flash_message in app.flashes('success') %}
                <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
                    {{ flash_message }}
                </div>
            {% endfor %}

            {{ form_start(manageUserForm) }}

            <div class="mb-4">
                {{ form_label(manageUserForm.first_name, 'First name', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(manageUserForm.first_name, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(manageUserForm.first_name) }}
            </div>

            <div class="mb-4">
                {{ form_label(manageUserForm.last_name, 'Last name', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(manageUserForm.last_name, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(manageUserForm.last_name) }}
            </div>

            <div class="mb-4">
                {{ form_label(manageUserForm.gender, 'Gender', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(manageUserForm.gender, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(manageUserForm.gender) }}
            </div>

            <div class="mb-4">
                {{ form_label(manageUserForm.profile_picture, 'Choose profile picture', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(manageUserForm.profile_picture, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(manageUserForm.profile_picture) }}
            </div>

            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                Ment√©s
            </button>
            {{ form_end(manageUserForm) }}
        </div>
    </div>
{% endblock %}
