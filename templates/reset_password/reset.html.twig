{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Reset your password</h1>

            {{ form_start(resetForm) }}
            <div class="mb-4">
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                Reset password
            </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
