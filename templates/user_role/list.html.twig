{% extends 'base.html.twig' %}

{% block title %}Admin Felhasználók{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-6">Felhasználók kezelése</h1>

        <table class="min-w-full table-auto border-collapse border border-gray-200 rounded-md shadow-md">
            <thead>
            <tr class="bg-gray-200">
                <th class="py-2 px-4 border border-gray-300 text-left">ID</th>
                <th class="py-2 px-4 border border-gray-300 text-left">Név</th>
                <th class="py-2 px-4 border border-gray-300 text-left">E-mail</th>
                <th class="py-2 px-4 border border-gray-300 text-left">Jelenlegi szerepkörök</th>
                <th class="py-2 px-4 border border-gray-300 text-left">Műveletek</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="hover:bg-gray-100">
                    <td class="py-2 px-4 border border-gray-300">{{ user.id }}</td>
                    <td class="py-2 px-4 border border-gray-300">{{ user.firstName }} {{ user.lastName }}</td>
                    <td class="py-2 px-4 border border-gray-300">{{ user.email }}</td>
                    <td class="py-2 px-4 border border-gray-300">{{ user.roles|join(', ') }}</td>
                    <td class="py-2 px-4 border border-gray-300">
                        <a
                                href="{{ path('edit_user_role', {id: user.id}) }}"
                                class="text-blue-500 hover:text-blue-700 font-semibold">
                            Szerkesztés
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}